#!/bin/sh

# Step 1: Check for `.only` in staged test files
FILES=$(git diff --cached --name-only --diff-filter=ACM | grep -E '\.(spec|test)\.ts$|setup\.ts$' || true)

if [ -n "$FILES" ]; then
  MATCHED=$(echo "$FILES" | xargs grep -n '\.only' || true)

  if [ -n "$MATCHED" ]; then
    echo "$MATCHED"
    echo "ğŸ‘®â€â™‚ï¸ Commit blocked: Found '.only' in test files (.spec.ts, .test.ts, setup.ts)ğŸš¨"
    echo "ğŸ› ï¸ Remove '.only' before committing."
    exit 1
  fi
fi

# Step 2: Run lint-staged
echo "âœ… No '.only' found in test files. Proceeding to lint..."
npx lint-staged
STATUS=$?

# If lint-staged fails, block commit immediately
if [ "$STATUS" -eq 1 ]; then
  echo "ğŸ‘®â€â™‚ï¸ Commit blocked: Lint errors found in staged files ğŸš¨"
  echo "ğŸ› ï¸ Fix them before committing ğŸ¤–"
  exit 1
elif [ "$STATUS" -ne 0 ]; then
  echo "ğŸ’¥ Unexpected error from lint-staged $STATUS"
  exit $STATUS
fi

echo "âœ… No errors found. Let it go... ğŸš€"
exit 0

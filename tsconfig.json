{
  "compilerOptions": {
    "target": "ES2021",
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "noUncheckedIndexedAccess": true,
    "baseUrl": ".",
    "esModuleInterop": true,
    "strict": true,
    "paths": {
      "@api/*": ["src/core/api/*"],
      "@expects/*": ["src/expects/*"],
      "@fixtures/*": ["src/fixtures/*"]
    }
  }
}

{
  "compilerOptions": {
    "target": "ES2021",
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "noUncheckedIndexedAccess": true,
    "baseUrl": ".",
    "esModuleInterop": true,
    "strict": true,
    "paths": {
      "@api/*": ["src/core/api/*"],
      "@schema/*": ["src/api/Schema/*"],
      "@expects/*": ["src/expects/*"],
      "@fixtures/*": ["lib/ui/fixtures/*"],
      "@helpers/*": ["lib/helpers/*"]
    }
  }
}
